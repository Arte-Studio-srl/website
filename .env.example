# Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# REQUIRED - Authentication
# ============================================

# Secret key for JWT tokens (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-secure-secret-key-here

# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@example.com

# ============================================
# REQUIRED - Email (SMTP)
# ============================================

SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
CONTACT_FROM=Website <no-reply@yourdomain.com>
CONTACT_TO=owner@yourdomain.com

# ============================================
# OPTIONAL - GitHub Integration
# ============================================
# Enable to auto-commit admin changes to your repository
# See README.md for setup instructions

# GITHUB_CONTENT_OWNER=your-github-username-or-org
# GITHUB_CONTENT_REPO=your-repo-name
# GITHUB_CONTENT_BRANCH=main
# GITHUB_CONTENT_TOKEN=ghp_xxx  # Token with repo scope

# ============================================
# OPTIONAL - Environment
# ============================================

# Set to 'production' in production deployments
NODE_ENV=development
